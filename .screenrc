# ------------------------------------------------------------------------------
# SCREEN SETTINGS
# ------------------------------------------------------------------------------

startup_message off

#defflow on # will force screen to process ^S/^Q
deflogin on

# lets try to leave it on - do we really have a few thousand sessions open afterwards?
#autodetach off
autodetach on

# turn visual bell on
vbell off
bell_msg "bell in window %s^G"

# define a bigger scrollback, default is 100 lines
defscrollback 10240

# get proper utf-8
defutf8 on

shell -zsh

# read the terminal type to set from current $TERM
source ${HOME}/.screenrc:term-${TERM}

# ------------------------------------------------------------------------------
# SCREEN KEYBINDINGS
# ------------------------------------------------------------------------------

# Remove some stupid / dangerous key bindings
bind ^k
#bind L
bind ^\
# Make them better
bind \\ quit
bind K kill
bind I login on
bind O login off
bind } history

# Scrolling with Shift-PgUp and Shift-PgDown
# Scroll up
bindkey -d "^[[5S" eval copy "stuff 5\025"
bindkey -m "^[[5S" stuff 5\025
# mobaxterm
bindkey -d "^[5;2~" eval copy "stuff 5\025"
bindkey -m "^[5;2~" stuff 5\025

# Scroll down
bindkey -d "^[[5T" eval copy "stuff 5\004"
bindkey -m "^[[5T" stuff 5\004
# mobaxterm
bindkey -d "^[6;2~" eval copy "stuff 5\004"
bindkey -m "^[6;2~" stuff 5\004

# Scroll up more
bindkey -d "^[[25S" eval copy "stuff \025"
bindkey -m "^[[25S" stuff \025

# Scroll down more
bindkey -d "^[[25T" eval copy "stuff \004"
bindkey -m "^[[25T" stuff \004

# Shift-Left
bindkey "^[[27;5;9~" next
# for mobaxterm
bindkey "^[[1;2C"    next
# for linux vt
#bindkey "^[[C"       next

# Shift-Right
bindkey "^[[27;6;9~" prev
# for mobaxterm
bindkey "^[[1;2D"    prev
# for linux vt
#bindkey "^[[D"       prev


# ------------------------------------------------------------------------------
# TERMINAL SETTINGS
# ------------------------------------------------------------------------------

# The vt100 description does not mention "dl". *sigh*
termcapinfo vt100 dl=5\E[M

# turn sending of screen messages to hardstatus off
hardstatus off
# Set the hardstatus prop on gui terms to set the titlebar/icon title
termcapinfo xterm*|rxvt*|kterm*|Eterm* hs:ts=\E]0;:fs=\007:ds=\E]0;\007
# use this for the hard status string
#hardstatus string "%h%? users: %u%?"

# An alternative hardstatus to display a bar at the bottom listing the windownames
#
# @myself: always keep this hand-crafted masterpiece here, do not delete it!
#hardstatus alwayslastline "%{= .g}%H: %{ b}%-w%{!b}%n %t (%h)%{!b}%+w %=%{ g}%c:%s %M %d, %Y "
hardstatus string "screen on %H: %-w%n %t (%h)%+w"
caption always "%{= .g}%H: %{ b}%-w%{!b}%n %t (%h)%{!b}%+w %=%{ g}%c:%s %M %d, %Y "

windowlist string "%{ dk}%{ dr}%3n %{-}%{ db}%t (%h)%=%{r}%f%{-}  "

# read the terminal type to set from current $TERM
source ${HOME}/.screenrc:hs-${TERM}

# set these terminals up to be 'optimal' instead of vt100
termcapinfo xterm*|linux*|rxvt*|Eterm* OP

# Change the xterm initialization string from is2=\E[!p\E[?3;4l\E[4l\E>
# (This fixes the "Aborted because of window size change" konsole symptoms found
#  in bug #134198)
termcapinfo xterm 'is=\E[r\E[m\E[2J\E[H\E[?7h\E[?1;4;6l'

# To get screen to add lines to xterm's scrollback buffer, uncomment the
# following termcapinfo line which tells xterm to use the normal screen buffer
# (which has scrollback), not the alternate screen buffer.
#
#termcapinfo xterm|xterms|xs|rxvt ti@:te@

altscreen on

# Enable non-blocking mode to better cope with flaky ssh connections.
defnonblock 5

# ------------------------------------------------------------------------------
# STARTUP SCREENS
# ------------------------------------------------------------------------------

# Example of automatically running some programs in windows on screen startup.
#
#   The following will open top in the first window, an ssh session to monkey
#   in the next window, and then open mutt and tail in windows 8 and 9
#   respectively.
#
# screen top
# screen -t monkey ssh monkey
# screen -t mail 8 mutt
# screen -t daemon 9 tail -f /var/log/daemon.log

